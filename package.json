{
  "name": "figma-plugin-starterkit",
  "version": "2.12.1",
  "description": "Starter kit completo para criar plugins do Figma com React + TypeScript + Vite",
  "scripts": {
    "dev": "plugma dev",
    "build": "plugma build",
    "lint": "eslint --ext .ts,.tsx --ignore-pattern node_modules .",
    "lint:fix": "eslint --ext .ts,.tsx --ignore-pattern node_modules --fix ."
  },
  "keywords": [
    "figma",
    "plugin",
    "figma-plugin",
    "starter-kit",
    "react",
    "typescript",
    "vite",
    "template",
    "boilerplate"
  ],
  "author": "Alex Donega",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/seu-usuario/figma-plugin-starterkit"
  },
  "bugs": {
    "url": "https://github.com/seu-usuario/figma-plugin-starterkit/issues"
  },
  "homepage": "https://github.com/seu-usuario/figma-plugin-starterkit#readme",
  "devDependencies": {
    "@figma/eslint-plugin-figma-plugins": "*",
    "@figma/plugin-typings": "*",
    "@types/react": "^19.2.5",
    "@types/react-dom": "^19.2.3",
    "@typescript-eslint/eslint-plugin": "^6.12.0",
    "@typescript-eslint/parser": "^6.12.0",
    "@vitejs/plugin-react": "^5.1.1",
    "eslint": "^8.54.0",
    "plugma": "^2.2.3",
    "typescript": "^5.3.2",
    "vite": "^7.2.2"
  },
  "eslintConfig": {
    "extends": [
      "eslint:recommended",
      "plugin:@typescript-eslint/recommended",
      "plugin:@figma/figma-plugins/recommended"
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
      "project": "./tsconfig.json"
    },
    "root": true,
    "rules": {
      "@typescript-eslint/no-unused-vars": [
        "error",
        {
          "argsIgnorePattern": "^_",
          "varsIgnorePattern": "^_",
          "caughtErrorsIgnorePattern": "^_"
        }
      ]
    }
  },
  "dependencies": {
    "figma-plugin-ds": "^1.0.1",
    "react": "^19.2.0",
    "react-dom": "^19.2.0"
  }
}
